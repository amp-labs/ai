{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./lib",
      "declaration": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": false,
      "declarationMap": true
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules", "dist"]
  } 